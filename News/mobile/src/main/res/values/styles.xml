<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:navigationBarColor">@color/gray_2</item>
        <item name="android:windowBackground">@color/gray_3</item>
        <item name="icButtonStyle">@style/Base.Widget.AppCompat.Button</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:colorControlHighlight">@color/black</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="icFlags">
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="textFlags">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@color/bluelight_500</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_touch</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="doneFlags">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_gravity">center|right</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_done_black_24dp</item>
    </style>

    <style name="BlueTextButton" parent="AppTheme">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@color/bluelight_500</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_touch</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="frameLanguageButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_touch</item>
    </style>

    <style name="chooseFrameLanguageButton" parent="frameLanguageButton">
        <item name="android:background">@android:color/holo_red_dark</item>
    </style>

    <style name="buttonPrevNext">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_width">@dimen/dp_touch_80</item>
        <item name="android:layout_height">@dimen/dp_action</item>
    </style>

</resources>
