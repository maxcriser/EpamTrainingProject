<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81D4FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="Choose resources:"
            android:textSize="34sp" />

        <FrameLayout style="@style/chooseFrameLanguageButton">

            <ImageView
                android:id="@+id/imageView2"
                style="@style/icFlags"
                android:src="@drawable/us_flag" />

            <TextView
                android:id="@+id/textView3"
                style="@style/textFlags"
                android:text="site"
                android:textSize="20sp" />

            <ImageView
                style="@style/doneFlags"
                android:visibility="visible" />

        </FrameLayout>

        <FrameLayout style="@style/chooseFrameLanguageButton">

            <TextView
                android:id="@+id/textView"
                style="@style/textFlags"
                android:text="site2" />

            <ImageView
                android:id="@+id/imageView3"
                style="@style/icFlags"
                android:src="@drawable/uk_flag" />

            <ImageView
                style="@style/doneFlags"
                android:visibility="visible" />

        </FrameLayout>

        <FrameLayout style="@style/frameLanguageButton">

            <TextView
                style="@style/textFlags"
                android:gravity="center"
                android:text="site3" />

            <ImageView
                style="@style/icFlags"
                android:src="@drawable/ru_flag" />

            <ImageView
                style="@style/doneFlags"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout style="@style/frameLanguageButton">

            <TextView
                style="@style/textFlags"
                android:gravity="center"
                android:text="site4" />

            <ImageView
                style="@style/icFlags"
                android:src="@drawable/ua_flag" />

            <ImageView
                style="@style/doneFlags"
                android:visibility="gone" />
        </FrameLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_action"
        android:layout_gravity="bottom"
        android:background="#B3E5FC">

        <Button
            style="@style/buttonPrevNext"
            android:layout_gravity="center|right"
            android:background="?attr/selectableItemBackground"
            android:onClick="doneClick"
            android:src="@drawable/ic_arrow_forward_black_24dp"
            android:text="done"
            android:textAllCaps="true"
            android:textSize="16sp" />

        <ImageButton
            style="@style/buttonPrevNext"
            android:layout_gravity="center|left"
            android:onClick="backOnClick"
            android:paddingRight="16dp"
            android:src="@drawable/ic_arrow_back_black_24dp" />
    </FrameLayout>

</FrameLayout>