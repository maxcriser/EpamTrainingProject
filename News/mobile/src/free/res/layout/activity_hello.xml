<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/fragment_advrt"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/icon_dp_hello"
        android:layout_height="@dimen/icon_dp_hello"
        android:layout_gravity="center"
        android:src="@drawable/ic_logo_news" />

    <com.maxcriser.news.view.RobotoThinTextView
        android:id="@+id/title_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="90dp"
        android:gravity="center"
        android:text="@string/text_title_hello"
        android:textColor="@color/gray_light"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <include layout="@layout/fragment_line_one_dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_action"
            android:layout_gravity="bottom">

            <!--Roboto Regular font for button get started and similar-->

            <Button
                android:id="@+id/get_started"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_action"
                android:layout_gravity="center"
                android:background="@drawable/ripple"
                android:onClick="onClick"
                android:padding="16dp"
                android:src="@drawable/ic_arrow_forward_black_24dp"
                android:text="get started"
                android:textAllCaps="true"
                android:textColor="@color/bluelight_500"
                android:textSize="16sp" />

        </FrameLayout>

    </LinearLayout>

    </FrameLayout>

</FrameLayout>