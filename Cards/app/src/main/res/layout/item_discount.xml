<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/card_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="16dp"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginTop="16dp"
                                    android:foreground="?attr/selectableItemBackgroundBorderless"
                                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                                    card_view:cardBackgroundColor="@color/card_view"
                                    card_view:cardCornerRadius="2dp"
                                    card_view:cardElevation="2dp">

<FrameLayout
        android:id="@+id/linear_card"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@color/gray_shadow"/>

            <com.maxcriser.cards.view.custom_view.NotoSans
                android:id="@+id/title_main_cards"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="@string/title_of_cards"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>