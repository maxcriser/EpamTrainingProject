<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/fragment_toolbar_back_search"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.maxcriser.cards.view.TextViews.RobotoRegular
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:gravity="center|start"
                            android:paddingStart="16dp"
                            android:text="@string/add_a_new_card"
                            android:textAllCaps="true"
                            android:textColor="@color/text_toolbar"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0.4dp"
                            android:background="@color/text_toolbar"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:text="@string/name"
                            android:textColor="@color/text_toolbar"
                            android:textSize="16sp"/>

                        <EditText
                            android:inputType="text"
                            android:id="@+id/id_edit_text_name_discount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:layout_marginStart="16dp"
                            android:maxLines="1"
                            android:textSize="18sp"/>

                        <com.maxcriser.cards.view.TextViews.EANP72TextView
                            android:visibility="gone"
                            android:id="@+id/generate_barcode"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/barcode_height"
                            android:layout_gravity="center"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="8dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="120sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:text="@string/card_color"
                            android:textColor="@color/text_toolbar"
                            android:textSize="16sp"/>

                        <include layout="@layout/fragment_viewpager_preview_colors"/>
                        <include layout="@layout/fragment_cancel_save"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</merge>