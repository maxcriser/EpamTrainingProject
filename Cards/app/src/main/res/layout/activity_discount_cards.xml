<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        android:id="@+id/drawer_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/fragment_add_new_card"/>
        <include layout="@layout/fragment_toolbar_back"/>
        <include layout="@layout/fragment_toolbar_search"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:paddingBottom="16dp"
                android:paddingTop="@dimen/height_toolbar"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/discount_cards_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:scrollbars="vertical"/>

            <include layout="@layout/fragment_empty_page"/>

        </LinearLayout>

    </FrameLayout>

</android.support.v4.widget.DrawerLayout>