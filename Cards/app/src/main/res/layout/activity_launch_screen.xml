<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:id="@+id/activity_main"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       tools:context="com.maxcriser.cards.ui.LaunchScreenActivity">

    <com.maxcriser.cards.view.TextViews.RobotoThinTextView
        android:textColor="@color/gray_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/marginBottom_text_launchscreen"
        android:gravity="center"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textSize="@dimen/textSize_text_launchscreen"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginBottom_logo_launchscreen"
        android:padding="@dimen/padding_logo_launchscreen"
        android:src="@drawable/logo"/>
</merge>
