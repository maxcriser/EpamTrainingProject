<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/fragment_toolbar_back_search"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/bluelight_500"
                            android:orientation="horizontal">

                            <com.maxcriser.cards.view.TextViews.NotoSans
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center|left"
                                android:paddingLeft="16dp"
                                android:text="@string/name"
                                android:textColor="@color/text_white"
                                android:textSize="18sp"/>

                            <com.maxcriser.cards.view.EditTextViews.RobotoThinEditText
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:hint="@string/enter_name_of_card"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingLeft="16dp"
                                android:textAllCaps="true"
                                android:textColor="@color/text_toolbar"
                                android:textColorHint="@color/gray_light"
                                android:textSize="16sp"/>

                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/text_toolbar">

                            <android.support.v4.view.ViewPager
                                android:id="@+id/type_card"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:background="@android:color/white"/>

                        </FrameLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@color/bluelight_500"
                            android:gravity="center"
                            android:paddingLeft="16dp"
                            android:text="@string/card_color"
                            android:textColor="@color/text_white"
                            android:textSize="18sp"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <include layout="@layout/fragment_viewpager_preview_colors"/>

                <include layout="@layout/fragment_button_create_card"/>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</merge>