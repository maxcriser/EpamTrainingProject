<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:card_view="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/fragment_toolbar_back_search"/>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:id="@+id/linear_frame_title_discount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="4dp"
                            card_view:cardBackgroundColor="@color/gray_bottom_create_card"
                            card_view:cardCornerRadius="0dp"
                            card_view:cardElevation="4dp">

                            <com.maxcriser.cards.view.labels.RobotoRegular
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:gravity="center|start"
                                android:paddingStart="16dp"
                                android:text="@string/add_a_new_card"
                                android:textAllCaps="true"
                                android:textColor="@color/text_toolbar"
                                android:textSize="16sp"/>

                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">

                            <FrameLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:onClick="onPrevTypePagerClicked">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_gravity="center"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:src="@drawable/ic_left_arrow"/>

                            </FrameLayout>

                            <android.support.v4.view.ViewPager
                                android:id="@+id/type_card"
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_weight="1"
                                android:background="@android:color/white"/>

                            <FrameLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:onClick="onNextTypePagerClicked">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_gravity="center"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:src="@drawable/ic_right_arrow"/>

                            </FrameLayout>

                        </LinearLayout>

                        <EditText
                            android:id="@+id/bank"
                            style="@style/EditTextBlank"
                            android:layout_marginTop="8dp"
                            android:hint="@string/name_of_the_bank"
                            android:inputType="text"/>

                        <EditText
                            android:id="@+id/cardholder"
                            style="@style/EditTextBlank"
                            android:hint="@string/cardholder"
                            android:inputType="text"/>

                        <EditText
                            android:id="@+id/ver_number"
                            style="@style/EditTextBlank"
                            android:hint="@string/verification_number"
                            android:inputType="number"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="56dp"
                                    android:layout_gravity="end"
                                    android:gravity="center|bottom"
                                    android:paddingBottom="6dp"
                                    android:text="NUMBER"
                                    android:textColor="@color/text_toolbar"
                                    android:textSize="16sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="56dp"
                                    android:layout_gravity="end"
                                    android:gravity="center|bottom"
                                    android:paddingBottom="6dp"
                                    android:text="@string/pin"
                                    android:textColor="@color/text_toolbar"
                                    android:textSize="16sp"/>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="112dp"
                                android:orientation="vertical">

                                <com.github.pinball83.maskededittext.MaskedEditText
                                    android:id="@+id/number"
                                    android:layout_width="match_parent"
                                    android:layout_height="56dp"
                                    android:layout_marginEnd="16dp"
                                    android:layout_marginStart="16dp"
                                    android:inputType="number"
                                    android:textSize="18sp"
                                    app:mask="**** **** **** ****"
                                    app:notMaskedSymbol="*"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="56dp"
                                    android:layout_marginEnd="16dp"
                                    android:orientation="horizontal">

                                    <EditText
                                        android:id="@+id/pin"
                                        style="@style/EditTextBlank"
                                        android:layout_width="0dp"
                                        android:layout_height="56dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1000"
                                        android:gravity="center"
                                        android:imeOptions="actionDone"
                                        android:inputType="numberPassword"
                                        android:maxLength="4"/>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="56dp"
                                        android:layout_gravity="end"
                                        android:layout_weight="1"
                                        android:gravity="end"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="56dp"
                                            android:layout_gravity="end"
                                            android:gravity="center"
                                            android:text="@string/valid_thru"
                                            android:textColor="@color/text_toolbar"
                                            android:textSize="12sp"/>

                                        <android.support.v7.widget.CardView
                                            android:layout_width="92dp"
                                            android:layout_height="48dp"
                                            android:layout_gravity="end"
                                            android:layout_marginBottom="4dp"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="4dp"
                                            card_view:cardCornerRadius="2dp"
                                            card_view:cardElevation="2dp">

                                            <com.maxcriser.cards.view.labels.RobotoThin
                                                android:id="@+id/date"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:layout_margin="4dp"
                                                android:gravity="center"
                                                android:onClick="onDateClicked"
                                                android:textColor="@color/text_toolbar"
                                                android:textSize="18sp"
                                                tools:text="12/16"/>

                                        </android.support.v7.widget.CardView>

                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/scannerBar"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="@color/card_view"
                            android:visibility="invisible"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="10dp"
                                android:orientation="vertical">

                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="16dp"
                                    card_view:cardCornerRadius="2dp"
                                    card_view:cardElevation="2dp">

                                    <ImageView
                                        android:id="@+id/front_photo"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:adjustViewBounds="true"
                                        android:onClick="onFrontPhotoClicked"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/load_photo_credit_card"/>

                                    <FrameLayout
                                        android:id="@+id/remove_front"
                                        android:layout_width="match_parent"
                                        android:layout_height="36dp"
                                        android:layout_gravity="end|bottom"
                                        android:background="@color/gray_shadow"
                                        android:onClick="onRemoveFrontClicked"
                                        android:visibility="gone">

                                        <ImageButton
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:background="@drawable/ic_delete_black_24dp"/>

                                    </FrameLayout>

                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="16dp"
                                    card_view:cardCornerRadius="2dp"
                                    card_view:cardElevation="2dp">

                                    <ImageView
                                        android:id="@+id/back_photo"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:adjustViewBounds="true"
                                        android:onClick="onBackPhotoClicked"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/load_photo_credit_card"/>

                                    <FrameLayout
                                        android:id="@+id/remove_back"
                                        android:layout_width="match_parent"
                                        android:layout_height="36dp"
                                        android:layout_gravity="end|bottom"
                                        android:background="@color/gray_shadow"
                                        android:onClick="onRemoveBackClicked"
                                        android:visibility="gone">

                                        <ImageButton
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:background="@drawable/ic_delete_black_24dp"/>

                                    </FrameLayout>

                                </android.support.v7.widget.CardView>

                            </LinearLayout>

                        </LinearLayout>

                        <include layout="@layout/fragment_cancel_save"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</merge>