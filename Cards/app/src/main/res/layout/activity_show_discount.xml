<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <include layout="@layout/floating_menu_show"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/fragment_toolbar_back_search"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/linear_frame_title_discount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/bluelight_500">

                            <LinearLayout
                                android:id="@+id/linear_edit_frame_title_discount"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/bluelight_500"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    android:textColor="@color/text_white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:gravity="center|left"
                                    android:paddingLeft="16dp"
                                    android:text="@string/name"
                                    android:textSize="18sp"/>

                                <com.maxcriser.cards.view.EditTextViews.RobotoThinEditText
                                    android:id="@+id/rename_discount_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:hint="@string/enter_name_of_the_card"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:paddingLeft="16dp"
                                    android:textColor="@color/text_white"
                                    android:textColorHint="@color/gray_light"
                                    android:textSize="16sp"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/title_show_discount"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:gravity="center|center"
                                android:text="@string/name"
                                android:textColor="@color/text_white"
                                android:textSize="18sp"/>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="220dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp"
                            android:textColor="@color/black">

                            <com.maxcriser.cards.view.TextViews.EANP72TextView
                                android:id="@+id/show_barcode"
                                android:layout_width="match_parent"
                                android:layout_height="105dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="25dp"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="170sp"/>
                        </FrameLayout>

                        <LinearLayout
                            android:id="@+id/linear_frame_actions_discount"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@color/bluelight_500"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:background="?attr/selectableItemBackground"
                                android:gravity="center"
                                android:onClick="onCancelDiscountClicked"
                                android:text="@string/cancel"
                                android:textColor="@color/text_white"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:background="?attr/selectableItemBackground"
                                android:gravity="center"
                                android:onClick="onOkDiscountClicked"
                                android:text="@string/ok"
                                android:textColor="@color/text_white"/>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </ScrollView>

    </LinearLayout>

</merge>