<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:id="@+id/card_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <!--Material design card-->

    <FrameLayout
        android:id="@+id/linear_card"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/bluelight_500"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/icon_bank_cards"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                android:scaleType="centerCrop"
                android:background="@drawable/type_visa"/>

            <com.maxcriser.cards.view.TextViews.RobotoThinTextView
                android:layout_weight="1000"
                android:id="@+id/title_main_cards"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="@string/title_of_cards"
                android:textAllCaps="true"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/nfc_cards_icon"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/icon_nfc"
                android:layout_width="36dp"
                android:layout_height="36dp"/>
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>