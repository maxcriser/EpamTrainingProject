<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_toolbar"
        android:background="@color/bluelight_500">

        <ImageButton
            android:layout_width="@dimen/height_toolbar"
            android:layout_height="@dimen/height_toolbar"
            android:background="?attr/selectableItemBackground"
            android:onClick="onMenuClicked"
            android:src="@drawable/ic_menu_black_24dp"/>

        <com.maxcriser.cards.view.TextViews.RobotoRegularTextView
            android:id="@+id/title_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_toolbar"
            android:layout_marginLeft="@dimen/margin_left_title_toolbar"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textSize="18sp"/>

    </FrameLayout>

</merge>