<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:card_view="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/fragment_toolbar_back_search"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="2dp">

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical">

                    <com.maxcriser.cards.view.TextViews.RobotoRegular
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center|start"
                        android:paddingStart="16dp"
                        android:text="@string/add_a_new_card"
                        android:textAllCaps="true"
                        android:textColor="@color/text_toolbar"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp"
                        android:background="@color/text_toolbar"/>

                    <com.maxcriser.cards.view.TextViews.NotoSans
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Title"
                        android:textColor="@color/text_toolbar"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:textSize="18sp"
                        tools:text="United States, Washington"/>

                    <com.maxcriser.cards.view.TextViews.NotoSans
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Owner"
                        android:textColor="@color/text_toolbar"/>

                    <EditText android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginEnd="16dp"
                              android:layout_marginStart="16dp"
                              android:textSize="18sp"
                              tools:text="Barac Obama"/>

                    <include layout="@layout/fragment_viewpager_preview_colors"/>

                    <CheckBox
                        android:layout_margin="16dp"
                        android:textSize="16sp"
                        android:text="@string/add_to_calendar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/add_to_calendar"/>

                    <include layout="@layout/fragment_cancel_save"/>



                </LinearLayout>
            </android.support.v7.widget.CardView>
        </ScrollView>
    </LinearLayout>

</merge>