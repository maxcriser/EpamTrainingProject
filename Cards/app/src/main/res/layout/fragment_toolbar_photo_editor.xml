<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:card_view="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_gravity="top"
        android:id="@+id/card_view_toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_toolbar"
        android:onClick="onToolbarBackClicked"
        card_view:cardBackgroundColor="@color/gray_shadow_photo_editor_back"
        card_view:cardElevation="2dp">

        <LinearLayout
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="@dimen/height_toolbar"
                android:layout_height="@dimen/height_toolbar"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="onBackClicked"
                android:src="@drawable/ic_close_white_24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_toolbar"
                android:layout_weight="1"/>

            <ImageButton
                android:layout_width="@dimen/height_toolbar"
                android:layout_height="@dimen/height_toolbar"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="onPhotoAgainClicked"
                android:src="@drawable/ic_reused_camera_24dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</merge>