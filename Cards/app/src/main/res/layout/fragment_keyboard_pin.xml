<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/button_one"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="12dp"
                android:background="?attr/selectableItemBackground"
                android:onClick="oneInput"
                android:text="1"
                android:textSize="32sp"/>

            <Button
                android:id="@+id/button_two"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="12dp"
                android:background="?attr/selectableItemBackground"
                android:onClick="twoInput"
                android:text="2"
                android:textSize="32sp"/>

            <Button
                android:id="@+id/button_three"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="12dp"
                android:background="?attr/selectableItemBackground"
                android:onClick="threeInput"
                android:text="3"
                android:textSize="32sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center">

            <Button
                android:id="@+id/button_four"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="12dp"
                android:background="?attr/selectableItemBackground"
                android:onClick="fourInput"
                android:text="4"
                android:textSize="32sp"/>

            <Button
                android:id="@+id/button_five"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="12dp"
                android:background="?attr/selectableItemBackground"
                android:onClick="fiveInput"
                android:text="5"
                android:textSize="32sp"/>

            <Button
                android:id="@+id/button_six"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="12dp"
                android:background="?attr/selectableItemBackground"
                android:onClick="sixInput"
                android:text="6"
                android:textSize="32sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center">

            <Button
                android:id="@+id/button_seven"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="12dp"
                android:background="?attr/selectableItemBackground"
                android:onClick="sevenInput"
                android:text="7"
                android:textSize="32sp"/>

            <Button
                android:id="@+id/button_eight"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="12dp"
                android:background="?attr/selectableItemBackground"
                android:onClick="eightInput"
                android:text="8"
                android:textSize="32sp"/>

            <Button
                android:id="@+id/button_nine"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="12dp"
                android:background="?attr/selectableItemBackground"
                android:onClick="nineInput"
                android:text="9"
                android:textSize="32sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginRight="12dp"/>

            <Button
                android:id="@+id/button_zero"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="?attr/selectableItemBackground"
                android:onClick="zeroInput"
                android:text="0"
                android:textSize="32sp"/>

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="12dp"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.maxcriser.cards.view.RobotoThinTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:background="?attr/selectableItemBackground"
                android:onClick="onCancelClicked"
                android:text="@string/cancel"
                android:textAllCaps="true"
                android:textColor="@color/bluelight_500"
                android:textSize="24sp"/>

            <com.maxcriser.cards.view.RobotoThinTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:background="?attr/selectableItemBackground"
                android:onClick="onDeleteClicked"
                android:text="Delete"
                android:textAllCaps="true"
                android:textColor="@color/bluelight_500"
                android:textSize="24sp"/>

        </FrameLayout>

    </LinearLayout>

</FrameLayout>