<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.maxcriser.cards.view.TextViews.NotoSans
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"
            android:layout_marginBottom="20dp"
            android:text="@string/enter_pin"
            android:textColor="@color/gray_light"
            android:textSize="20sp"/>

        <FrameLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/crlcOne"
                    android:layout_width="@dimen/pin_button_size"
                    android:layout_height="@dimen/pin_button_size"
                    android:layout_margin="4dp"
                    android:background="@drawable/ic_button_pin_24dp"/>

                <ImageView
                    android:id="@+id/crlcTwo"
                    android:layout_width="@dimen/pin_button_size"
                    android:layout_height="@dimen/pin_button_size"
                    android:layout_margin="8dp"
                    android:background="@drawable/ic_button_pin_24dp"/>

                <ImageView
                    android:id="@+id/crlcThree"
                    android:layout_width="@dimen/pin_button_size"
                    android:layout_height="@dimen/pin_button_size"
                    android:layout_margin="8dp"
                    android:background="@drawable/ic_button_pin_24dp"/>

                <ImageView
                    android:id="@+id/crlcFour"
                    android:layout_width="@dimen/pin_button_size"
                    android:layout_height="@dimen/pin_button_size"
                    android:layout_margin="8dp"
                    android:background="@drawable/ic_button_pin_24dp"/>


            </LinearLayout>
        </FrameLayout>

        <include layout="@layout/fragment_keyboard_pin"/>

        <FrameLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <com.maxcriser.cards.view.TextViews.NotoSans
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="left|bottom"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:gravity="bottom"
                android:onClick="onCancelClicked"
                android:text="@string/cancel"
                android:textColor="@color/gray_light"
                android:textSize="24sp"/>

            <com.maxcriser.cards.view.TextViews.NotoSans
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:gravity="bottom"
                android:onClick="onDeleteClicked"
                android:text="@string/delete"
                android:textColor="@color/gray_light"
                android:textSize="24sp"/>

        </FrameLayout>

    </LinearLayout>
</merge>