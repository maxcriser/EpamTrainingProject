<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.maxcriser.cards.view.TextViews.RobotoThin
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"
            android:layout_marginBottom="20dp"
            android:text="@string/enter_pin"
            android:textColor="@color/text_white"
            android:textSize="20sp"/>

        <FrameLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/crlcOne"
                    android:layout_width="@dimen/pin_button_size"
                    android:layout_height="@dimen/pin_button_size"
                    android:layout_margin="8dp"
                    android:background="@drawable/ic_button_pin_24dp"/>

                <ImageView
                    android:id="@+id/crlcTwo"
                    android:layout_width="@dimen/pin_button_size"
                    android:layout_height="@dimen/pin_button_size"
                    android:layout_margin="8dp"
                    android:background="@drawable/ic_button_pin_24dp"/>

                <ImageView
                    android:id="@+id/crlcThree"
                    android:layout_width="@dimen/pin_button_size"
                    android:layout_height="@dimen/pin_button_size"
                    android:layout_margin="8dp"
                    android:background="@drawable/ic_button_pin_24dp"/>

                <ImageView
                    android:id="@+id/crlcFour"
                    android:layout_width="@dimen/pin_button_size"
                    android:layout_height="@dimen/pin_button_size"
                    android:layout_margin="8dp"
                    android:background="@drawable/ic_button_pin_24dp"/>


            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:paddingLeft="36dp"
            android:paddingRight="36dp"
            android:layout_marginBottom="36dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/fragment_keyboard_pin"/>

        </FrameLayout>

    </LinearLayout>
</merge>