<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:card_view="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_toolbar"
        android:onClick="onToolbarBackClicked"
        card_view:cardBackgroundColor="@color/white_shadow"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="@dimen/height_toolbar"
                android:layout_height="@dimen/height_toolbar"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="onBackClicked"
                android:src="@drawable/ic_arrow_back_black_24dp"/>

            <com.maxcriser.cards.view.labels.RobotoRegular
                android:id="@+id/title_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_toolbar"
                android:layout_weight="100"
                android:gravity="start|center"
                android:paddingStart="16dp"
                android:text="@string/app_name"
                android:textColor="@color/text_toolbar"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/search_image_toolbar"
                android:layout_width="@dimen/height_toolbar"
                android:layout_height="@dimen/height_toolbar"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="onSearchClicked"
                android:src="@drawable/ic_search_24dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</merge>