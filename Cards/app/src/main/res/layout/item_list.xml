<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:foreground="?attr/selectableItemBackground"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <!--Material design card-->

    <FrameLayout
        android:id="@+id/linear_card"
        android:background="@color/bluelight_500"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_margin="16dp"
                android:id="@+id/icon_main_cards"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/types_cards_icon" />

            <com.maxcriser.cards.view.RobotoThinTextView
                android:textAllCaps="true"
                android:gravity="center|left"
                android:text="@string/title_of_cards"
                android:id="@+id/title_main_cards"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="16sp" />

        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>